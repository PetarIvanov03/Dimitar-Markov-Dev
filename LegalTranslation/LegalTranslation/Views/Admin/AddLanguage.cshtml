@{
    ViewData["Title"] = "Добави език";
}
<br>
<div class="newInConst">
<br>
<form method="post" asp-action="AddLanguage" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for=Name>Нов език: </label>
            <input asp-for=Name class="form-control" placeholder="език" required>
        <span asp-validation-for=Name class+"text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn greenbtn-custom">Добави</button>
</form>
<br>
</div>
<br>
<a class="btn bluebtn-custom newOutConst" asp-controller="Admin" asp-action="Index">Назад</a>
