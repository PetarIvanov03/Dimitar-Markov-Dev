@using LegalTranslation.ViewModels
@model IEnumerable<UserViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Всички workers";
}



<br>
@foreach (var item in Model)
{
    <div class="newOutConst">
        <div class="newInConst shadow-sm bg-white rounded-md">
            <div class="card-body">
                
                @if (item.Role == "admin")
                {
                    <p class="card-text">@item.Role</p>
                }
                else
                {
                    <p class="card-text">@item.Role</p>
                }
                <p class="card-text">@item.Email</p>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        @if (item.Role != "admin")
                        {
                            <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id=@item.Id class="btn redbtn-custom">Изтрий</a>
                        }
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <br>
}

<a class="newOutConst btn bluebtn-custom" asp-controller="Admin" asp-action="Index">Назад</a>
