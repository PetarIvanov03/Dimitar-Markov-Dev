
@model List<Language>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Списък с езици";
}
<div class="newInConst">
<h1 class="">Списък с езици</h1>

<form method="post" asp-action="LanguagesEdit" enctype="multipart/form-data">
    @foreach (var item in Model)
{
    <div>
        <input type="checkbox" id="checkbox_@item.Id" name="languagesIds" value=@item.Id checked=@item.IsActive />
        <label for="checkbox_@item.Id">@item.Name</label>
    </div>
}
    <br>
    <button type="submit" class="btn greenbtn-custom">Запази промените</button>
</form>
<br>
<a asp-controller="Admin" asp-action="AddLanguage" class="btn bluebtn-custom">Добави език</a>
<br>
    <br>
    <a class="btn bluebtn-custom" asp-controller="Admin" asp-action="Index">Назад</a>
    <br>
    <br>
</div>